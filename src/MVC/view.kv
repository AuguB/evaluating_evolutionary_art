#:kivy 1.0.9
WindowManager:
    MainMenu:
    SetupScreen:
    TuringTestScreen:
    ParticipantScreen:


<MainMenu>:
    GridLayout:
        padding:50
        cols: 1
        Button:
            text: "Make Art"
            on_release: app.root.current = "setup"
        Button:
            text: "Do Turing Test"
        Button:
            text: "I am a participant"

<SetupScreen>:
    grid_layout: grid_layout

    col1: col1
    col2: col2
    col3: col3
    col4: col4

    GridLayout:
        id: grid_layout
        padding:50
        cols: 4
        GridLayout:
            cols:1
            id: col1
            Button:
                text: "poep"
                id: mainbutton
                on_release: root.test_func()
        GridLayout:
            cols:1
            id: col2
        GridLayout:
            cols:1
            id: col3
        GridLayout:
            cols:1
            id: col4



<WindowManager>:
    id: screen_manager

    main_menu: main_menu
    setup_screen: setup_screen

    MainMenu:
        id: main_menu
        name: "main"
        manager: screen_manager

    SetupScreen:
        id: setup_screen
        name: "setup"
        manager: screen_manager